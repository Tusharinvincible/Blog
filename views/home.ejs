<%- include("partials/header") -%>
    <div>
        <h1 style="text-align: center;"><%= titleOfPage %></h1>
      
          
            <% posts.forEach((post)=>{ %>
                <div style="margin-top: 5px;" <%if(check){ %> class="post-box"
                    <% } %> >
                     <h4 class="title-box"  style="text-align: center; justify-content: center;"> <%= post.titleOfPost %></h4>

                    <hr>
               
                     <p class="post-data" style="margin: 10px; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">  
                    <%= post.paragraphText.substring(0,100) +"....." %>

                    <a href="/posts/<%= post.titleOfPost %>">Read More</a>
                     </p>
                </div>

            <% }) %>

               
            
        
    </div>
<%- include("partials/footer") -%>